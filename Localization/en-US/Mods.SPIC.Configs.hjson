InfinitySettings: {
	DisplayName: Infinity Settings

	Headers: {
		Features: Features
		Infinities: Infinity Configs
	}

	DetectMissingCategories: {
		Label: "[i:1299] Detect missing categories"
		Tooltip:
			'''
			Detect the categories of items if they are unknown.
			You can see the detected catagories in the Customs below.
			'''
	}

	PreventItemDuplication: {
		Label: "[i:3988] Prevent item duplication"
		Tooltip:
			'''
			Prevent infinite entities to drop items, be picked up or any action that would result a real item been created 
			For example:
			Infinite Tiles won't drop items
			Infinite Critters will turn into smoke when caught
			Infinite Buckets won't fill or empty on use
			'''
	}

	Infinities: {
		Label: Infinity Configs
		Tooltip: ""
	}
}

InfinityDisplays: {
	DisplayName: Infinities Displays

	Headers: {
		General: General
		Displays: Display Configs
		Infinities: Infinity Configs
		Performances: Performances
	}

	groups: {
		Label: "[i:3093] Show Groups"
		Tooltip: Displays the infinity of group infinities
	}

	exclusiveDisplay: {
		Label: "[i:5075] Exclusive Displays"
		Tooltip: Only display Infinities relevant to the context (e.g. the only infinity displayed when an item is in an ammo slot is the Ammo Infinity)
	}

	alternateDisplays: {
		Label: "[i:4953] Alternate Displays"
		Tooltip: Displays the infinity of consumables consumed by the item (e.g. ammos, baits, etc)
	}

	Displays: {
		Label: Displays
		Tooltip: ""
	}

	Infinities: {
		Label: Infinity Configs
		Tooltip: ""
	}

	Cache: {
		Label: Cache
		Tooltip:
			'''
			Type /spiccache in-game to see the cached values
			Performances: Optimal performances, large cache (~10kB). Will not recompute any value
			Smart: Great performances, small cache (~3kB). May recompute some values
			None: Horrendous performances, no cache. Just don't
			'''
	}

	CacheRefreshDelay: {
		Label: Cache Refresh Delay
		Tooltip:
			'''
			Forces a minimum delay (in frames) between each cache refresh
			Increase this value if the game lags when your inventory changes extremely quickly
			May cause visual inconsistencies, especially for large values (>15)
			'''
	}
}

